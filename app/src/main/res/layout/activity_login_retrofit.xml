<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_retrofit_api.Login_retrofit"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:text="Add Details"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Login_api_email"
        android:hint="Enter Name"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Login_api_Password"
        android:hint="Enter Job"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/Login_api_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add Data"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/Login_api_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:text="Show Data"
        android:layout_gravity="center_horizontal"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/api_response_showdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hii"
            android:textSize="20dp"
            android:padding="10dp"/>

    </ScrollView>


</LinearLayout>